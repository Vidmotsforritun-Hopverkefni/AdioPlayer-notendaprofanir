<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="buttonContainer" prefHeight="450.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hi.vidmot.audioplayer.controller.AddPlaylistController">
    <children>
        <!-- Include the menu if needed -->
        <fx:include fx:id="menuStyring" source="menu_lag-view.fxml" />

        <!-- ListView for displaying playlists -->
        <ListView fx:id="playlistListView">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </ListView>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onDone" text="Done" textAlignment="CENTER">

         <opaqueInsets>
            <Insets bottom="40.0" />
         </opaqueInsets></Button>
        <Button alignment="CENTER" contentDisplay="CENTER"  mnemonicParsing="false" onAction="#onDeletePlaylist" text="Delete Playlist" textAlignment="CENTER"/>


        <!-- Add more elements as needed -->
    </children>
</VBox>
